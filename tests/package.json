{
  "name": "engraved-tests",
  "version": "0.1.0",
  "author": "PzYon",
  "license": "ISC",
  "scripts": {
    "e2e:start-api": "dotnet run --project ../api/Engraved.Api/ -- e2e-tests",
    "e2e:start-api:ci": "dotnet ../api-artifact/Engraved.Api.dll --urls \"http://localhost:5072\" -- e2e-tests",
    "e2e:start-app": "cd ../app && npm run build:e2e && cd ../tests && npx superstatic ../app/dist --port 3000",
    "e2e:start-app:ci": "npx superstatic ../app-artifact --port 3000",
    "e2e:run-tests": "npx playwright test",
    "e2e:run-tests:ui:chromium": "npx playwright test --project=\"chromium\" --ui",
    "e2e:run-tests:ui:android": "npx playwright test --project=\"android\" --ui",
    "types:check": "tsc --noEmit"
  },
  "dependencies": {
    "@playwright/test": "1.58.1",
    "@types/node": "24.10.10",
    "superstatic": "10.0.0"
  }
}
