{
  "name": "tests",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "e2e:start-api": "dotnet run --project ../api/Engraved.Api/ -- e2e-tests",
    "e2e:start-app": "cd ../app && npm run start",
    "e2e:execute-tests": "npx playwright test --project=\"Google Chrome\"",
    "e2e:execute-tests:ui": "npx playwright test --project=\"Google Chrome\" --ui",
    "e2e:run": "concurrently --kill-others --success first --names \"api,app,e2e-tests\" -c \"bgYellow.bold,bgBlue.bold,bgGreen.bold\" \"npm run e2e:start-api\" \"npm run e2e:start-app\" \"wait-on http-get://localhost:5072/ && npm run e2e:execute-tests\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "types:check": "tsc --noEmit"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,css,md,json}": [
      "npx prettier --write",
      "npx eslint --fix"
    ]
  },
  "keywords": [],
  "author": "PzYon",
  "license": "ISC",
  "dependencies": {
    "@playwright/test": "1.39.0",
    "@types/node": "20.8.7",
    "concurrently": "8.2.2",
    "eslint-plugin-playwright": "0.18.0",
    "prettier": "3.0.3",
    "wait-on": "7.0.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.53.0"
  }
}
