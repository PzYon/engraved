    "@playwright/test": "1.57.0",
    "@types/node": "24.10.3",
    "@typescript-eslint/eslint-plugin": "8.49.0",
    "@typescript-eslint/parser": "8.49.0",
    "eslint": "9.39.1",
    "eslint-plugin-playwright": "2.4.0",
    "prettier": "3.7.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.3",
