{
  "name": "tests",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "ci:start-server": "dotnet run --project ../api/Engraved.Api/ -- integration-tests",
    "ci:start-client": "cd ../app && npm run start",
    "ci:execute-tests": "npx playwright test --project=\"Google Chrome\"",
    "ci:execute-tests:ui": "npx playwright test --project=\"Google Chrome\" --ui",
    "ci:run": "concurrently --kill-others --success first --names \"api,app,tests\" -c \"bgYellow.bold,bgBlue.bold,bgGreen.bold\" \"npm run ci:start-server\" \"npm run ci:start-client\" \"wait-on http-get://localhost:5072/ && npm run ci:execute-tests\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "1.39.0",
    "@types/node": "20.8.7"
  },
  "dependencies": {
    "concurrently": "8.2.2",
    "prettier": "3.0.3",
    "wait-on": "7.0.1"
  }
}
